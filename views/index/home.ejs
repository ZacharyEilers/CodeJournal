<% include ../partials/header.ejs%>

    <div class = "container">
        
    <div class = "row">
    <div class = "col-lg-4 order-md-last order-sm-first">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Featured
            </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">Cras justo odio</li>
                <li class="list-group-item">Dapibus ac facilisis in</li>
                <li class="list-group-item">Vestibulum at eros</li>
            </ul>
        </div>
    </div>
    
        <div class = "col-lg-8 order-md-first order-sm-last">
            <h1 class = "text-center">Home</h1>
                
                <h2 class = "text-left">Journals</h2>
                <% journals.forEach(function(journal){ %>
                  <p>
                    <button class="btn btn-dark btn-block btn-lg journal-expand" type="button" data-toggle="collapse" data-target=".journal-01" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2"><%=journal.title%> <i class="fas fa-angle-down"></i></button>
                  </p>
                  <div class="row">
                      <!-- <div class = "row"> -->
                            <div class = "col-12 col-md-4"><a role = "button" href = "/journals/<%=journal._id%>/create" class = "btn btn-outline-primary journal-01 collapse journal-crud-button">Create Post <i class="fas fa-plus"></i></a></div>
                            <div class = "col-12 col-md-4"><a role = "button" href = "/journals/<%=journal._id%>/" class = "btn btn-outline-secondary journal-01 collapse journal-crud-button">View all posts <i class="fas fa-angle-right"></i></a></div>
                            <div class = "col-12 col-md-4"><a role = "button" href = "/journals/<%=journal._id%>/edit" class = "btn btn-outline-warning journal-01 collapse journal-crud-button">Edit Journal Details <i class="fas fa-pen"></i></a></div>
                      <!-- </div> -->
                  
                  <% if (journal.posts.length >= 2){ %>
                      <% for(var i = journal.posts.length-1; i>=journal.posts.length-2; i--){ %>
                        <div class="col col-12 col-md-6">
                          <div class="collapse journal-01" id="multiCollapseExample2">
                                <div class="card">
                                    <img class="card-img-top" src="https://bit.ly/2NeIetx" alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title"><%=journal.posts[i].title%></h5>
                                            <h6 class="card-subtitle mb-2 text-muted"><%=journal.posts[i].author.username%></h6>
                                            <p class="card-text"><%-journal.posts[i].body.substring(0, 100)%></p>
                                            <a href="/posts/<%=journal.posts[i]._id%>" class="btn btn-primary">View</a>
                                        </div>
                                </div>
                          </div>
                        </div>
                      <% } %>
                  <% } %>
                  </div>
                <% }) %>
              </div>

            </div>
<% include ../partials/footer.ejs%>
