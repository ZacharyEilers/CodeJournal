<% include ../partials/header.ejs%>

<div class = "container"> 
    <form action = "/posts/create" method = "POST">
        <div class="form-group">
            <label for="nameInput">Title</label>
            <input name = "title" type="text" class="form-control" id="nameInput" placeholder="Make a flashy headline">
        </div>


        <div class="form-group">
            <label for="bodyInput">Body</label>
            <textarea name = "body" class="form-control" id="bodyInput" placeholder = "The meat of your new post" rows="6"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
</div>

