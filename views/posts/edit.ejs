<%- include('../partials/header.ejs', {active: "none"}); %>%>

<div class = "container mt-3"> 
    <form action = "/posts/<%=post._id%>?_method=PUT" method = "POST">
        
        <div class = "row">
            <div class = "col-12 col-md-8">
                 <h1>Update a post</h1>
            </div>
            <div class = "col-md-4">
                 <div class="btn-group btn-group-toggle align-bottom mt-2" data-toggle="buttons">
                     
                <%if(post.isPrivate == false){%>
                  <label class="btn btn-outline-dark active">
                <% } else {%>
                  <label class="btn btn-outline-dark">
                <% } %>
                
                    <input name = "privacy" value = "public" type="radio" name="options" id="option1" autocomplete="off" checked> Public
                  </label>
                  
                  <%if(post.isPrivate == true){%>
                    <label class="btn btn-outline-secondary active">
                  <% } else {%>
                    <label class="btn btn-outline-secondary">
                  <% } %>
                  
                    <input name = "privacy" value = "private" type="radio" name="options" id="option2" autocomplete="off"> Private
                  </label>
                </div>
            </div>
        </div>
        
        
        <div class="form-group">
            <label for="nameInput">Title</label>
            <input name = "post[title]" type="text" class="form-control" id="nameInput" value = "<%=post.title%>">
        </div>


        <div class="form-group">
            <label for="bodyInput">Body</label>
            <textarea name = "post[body]" class="form-control" id="bodyInput" rows="6"><%-post.body%></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
</div>

<% include ../partials/footer.ejs%>