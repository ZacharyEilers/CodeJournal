<% include ../partials/header.ejs%>

<div class = "container"> 
    <form action = "/journals/create" method = "POST">

    <h1>Create a new journal</h1>
        <div class="form-group">
            <label for="nameInput">Title</label>
            <input name = "title" type="text" class="form-control" id="nameInput" placeholder="The title of your new journal">
        </div>

        <div class="form-group">
            <label for="bodyInput">Description</label>
            <textarea name = "description" class="form-control" id="bodyInput" placeholder = "A brief description describing what your journal is about" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

</div>

